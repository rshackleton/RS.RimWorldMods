<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<!-- Improve yields from centipedes greatly -->
	<Operation Class="PatchOperationReplace">
		<xpath>
			Defs/ThingDef[defName="Mech_Centipede"]/butcherProducts
		</xpath>
		<value>
			<butcherProducts>
				<Steel>
					150
				</Steel>
				<Plasteel>
					75
				</Plasteel>
				<ComponentIndustrial>
					10
				</ComponentIndustrial>
			</butcherProducts>
		</value>
	</Operation>
	<!-- Improve yields from termites greatly -->
	<Operation Class="PatchOperationReplace">
		<xpath>
			Defs/ThingDef[defName="Mech_Termite"]/butcherProducts
		</xpath>
		<value>
			<butcherProducts>
				<Steel>
					75
				</Steel>
				<Plasteel>
					50
				</Plasteel>
				<ComponentIndustrial>
					5
				</ComponentIndustrial>
			</butcherProducts>
		</value>
	</Operation>
	<!-- Improve yields from walkers (lancers/scythers) slightly -->
	<Operation Class="PatchOperationReplace">
		<xpath>
			Defs/ThingDef[@Name="BaseMechanoidWalker"]/butcherProducts
		</xpath>
		<value>
			<butcherProducts>
				<Steel>
					50
				</Steel>
				<Plasteel>
					25
				</Plasteel>
				<ComponentIndustrial>
					3
				</ComponentIndustrial>
			</butcherProducts>
		</value>
	</Operation>
</Patch>
